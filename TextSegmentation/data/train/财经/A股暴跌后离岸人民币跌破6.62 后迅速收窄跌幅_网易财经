        if (!window.__isQuotesLoaded && !window.__isQuotesLoading &&
                ( !window.QUOTES_FIGURE || typeof window.QUOTES_FIGURE !== 'function') ) {
            window.__isQuotesLoading = true;
            var script = document.createElement('script'),
